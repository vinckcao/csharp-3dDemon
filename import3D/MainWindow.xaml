<Window
    x:Class="import3D.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helix="http://helix-toolkit.org/wpf"
    xmlns:local="clr-namespace:import3D"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="3D文件读取测试工具_2024-03-04-M1"
    d:DesignHeight="600"
    d:DesignWidth="800"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <helix:HelixViewport3D
            x:Name="helixControl"
            MouseDoubleClick="HelixControl_OnMouseDoubleClick"
            RotateAroundMouseDownPoint="True"
            ShowCoordinateSystem="True"
            ShowFrameRate="True"
            ZoomAroundMouseDownPoint="True"
            ZoomExtentsWhenLoaded="True">
            <!--  相机位置也很重要，位置不对，看到的模型就很奇怪  -->
            <!--<helix:HelixViewport3D.Camera>
                <PerspectiveCamera
                    FarPlaneDistance="2000"
                    FieldOfView="45"
                    LookDirection="0,0,-414.387754871885"
                    NearPlaneDistance=".1"
                    Position="9.9475983006414E-14,91.037123633789,414.387754871885"
                    UpDirection="0,1,0" />
            </helix:HelixViewport3D.Camera>-->
            <!--  很重要，没有灯光场景是黑的  -->
            <helix:DefaultLights />
            <ModelVisual3D x:Name="model" />
        </helix:HelixViewport3D>
        <Grid Grid.Row="1" Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="btnAdd3DModel"
                Grid.Column="1"
                Width="75"
                Margin="10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Click="btnAdd3DModel_Click"
                Content="添加模型" />
            <Button
                x:Name="btnClear3DModel"
                Grid.Column="2"
                Width="75"
                Margin="10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Click="btnClear3DModel_Click"
                Content="清空模型" />
        </Grid>
    </Grid>
</Window>